#!/bin/ksh

typeset -i i j k rand defcols defrows

for (( j = 0 ; j < 40 ; ++j )); do
    for (( i = 0 ; i < 160 ; ++i )); do
	(( k = ${RANDOM: -1} ))

	case ${k} in
	    0) printf "*";;
	    1) printf "/";;
	    2) printf "|";;
	    3) printf "\\";;
	    4) printf "-";;
	    ?) printf " ";;
	esac
    done

    if (( j < 39 )); then
	printf "\n"
    fi
done

while true; do
    (( rand = ${RANDOM} ))
    
    until (( 0 <= rand )) && (( rand <= 159 )); do
	(( rand = (( rand / div )) ))
	(( ++ div ))
    done

    (( defcols = rand ))
    (( div = 2 ))

    until (( 0 <= rand )) && (( rand <= 39 )); do
	(( rand = (( rand / div )) ))
	(( ++div ))
    done
    
    (( defrows = rand ))
    tput cup ${defrows} ${defcols}

    for sym in '@' '#' '_' '.'; do
	printf "%s\b" ${sym}
	sleep 0.${div}
    done
    
    printf " \b"
    sleep 0.${div}
done
